{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form) }}
    <div class="container-fluid px-4">
        <h1 class="mt-4">Itrio</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="{{ path('inicio') }}">Movimiento</a></li>
            <li class="breadcrumb-item active">Lista</li>
        </ol>
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table me-1"></i>
                Movimientos
            </div>

            <div class="card-body">
                <div class="d-flex justify-content-between mb-3">
                    <div class="d-flex align-items-center">
                        <label for="" class="me-2">Factura</label>
                        {{ form_widget(form.factura, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <div class="d-flex align-items-center">
                        <label for="" class="me-2">Pendiente:</label>
                        {{ form_widget(form.pendiente, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <div class="d-flex align-items-center">
                        <label for="" class="me-2">Id</label>
                        {{ form_widget(form.id, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <div class="d-flex align-items-center">
                        <label for="" class="me-2">Pagina</label>
                        {{ form_widget(form.pagina, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <div>
                        Registros {{ registros }}
                        {{ form_widget(form.btnFiltrar, { 'attr': {'class': 'btn btn-sm btn-primary'} }) }}
                        {{ form_widget(form.btnExcel, { 'attr': {'class': 'btn btn-sm btn-primary'} }) }}
                    </div>
                </div>
                <table class="table">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Tipo</th>
                        <th>Fecha</th>
                        <th>Total</th>
                        <th>Afectado</th>
                        <th>Saldo</th>
                        <th>Usuario_id</th>
                        <th>Usuario</th>
                        <th>Referencia</th>
                        <th>Factura</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for movimiento in movimientos %}
                        {% set keys = movimiento|keys %}
                        <tr>
                            <td class="">
                                <a class="btn"
                                   href="javascript:abrirVentana('{{ path('itrio_movimiento_detalle', { 'id': movimiento.id}) }}', 'Archivos', 500, 1200)">{{ movimiento.id }}</a>
                            </td>
                            <td>{{ movimiento.tipo }}</td>
                            <td>{{ movimiento.fecha | date('Y-m-d H:i') }}</td>
                            <td>{{ movimiento.vr_total }}</td>
                            <td>{{ movimiento.vr_afectado }}</td>
                            <td>{{ movimiento.vr_saldo }}</td>
                            <td>
                                {% if movimiento.usuario_id %}
                                    <a class="btn"
                                       href="javascript:abrirVentana('{{ path('itrio_movimiento_usuario', { 'id': movimiento.usuario_id}) }}', 'Archivos', 500, 1200)">{{ movimiento.usuario_id }}</a>
                                {% endif %}
                            </td>
                            <td>{{ movimiento.usuario__username }}</td>
                            <td>{{ movimiento.movimiento_referencia_id }}</td>
                            <td>{{ movimiento.factura_id }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
