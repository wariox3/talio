{% extends 'base.html.twig' %}
{% block content %}
    <div class="container-fluid px-4">
        <h1 class="mt-4">Inicio</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active">Estados</li>
        </ol>
        <div class="row">
            <div class="col-xl-4 col-md-6">
                <div class="card bg-success text-white mb-4">
                    <div class="card-body">Por enviar: {{ arrEstados.enviar }}</div>
                    <div class="card-footer d-flex align-items-center justify-content-between">
                        <a class="small text-white stretched-link" href="{{ path('wolframio_documento_enviar') }}">Ver Detalle</a>
                        <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                    </div>
                </div>
            </div>
            <div class="col-xl-4 col-md-6">
                <div class="card bg-danger text-white mb-4">
                    <div class="card-body">Errores: {{ arrEstados.error }}</div>
                    <div class="card-footer d-flex align-items-center justify-content-between">
                        <a class="small text-white stretched-link" href="{{ path('wolframio_documento_error') }}">Ver Detalle</a>
                        <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                    </div>
                </div>
            </div>
            <div class="col-xl-4 col-md-6">
                <div class="card bg-primary text-white mb-4">
                    <div class="card-body">Respuesta: {{ arrEstados.respuesta }}</div>
                    <div class="card-footer d-flex align-items-center justify-content-between">
                        <a class="small text-white stretched-link" href="{{ path('wolframio_documento_respuesta') }}">Ver Detalle</a>
                        <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="container">
                <h2>Servicio cola emitir:
                    {% if arrServicios.colaEmitir %}
                        <span class="badge bg-success">Activo</span>
                    {% else %}
                        <span class="badge bg-danger">Inactivo</span>
                    {% endif %}
                </h2>
                <h2>Servicio cola respuesta:
                    {% if arrServicios.colaRespuesta %}
                        <span class="badge bg-success">Activo</span>
                    {% else %}
                        <span class="badge bg-danger">Inactivo</span>
                    {% endif %}
                </h2>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-6">
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-chart-area me-1"></i>
                        Documentos por hora
                    </div>
                    <div class="card-body"><canvas id="myChart" width="100%" height="40"></canvas></div>
                </div>
            </div>
            <div class="col-xl-6">
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-table me-1"></i>
                        Ultimos documentos
                    </div>

                    <div class="card-body">
                        <table id="datatablesSimple">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Prefijo</th>
                                <th>Numero</th>
                                <th>Fecha</th>
                                <th>Cod</th>
                                <th>Cuenta</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for documento in ultimosDocumentos %}
                                <tr>
                                    <td class="">{{ documento.id }}</td>
                                    <td>{{ documento.prefijo }}</td>
                                    <td>{{ documento.numero }}</td>
                                    <td>{{ documento.fechaRegistro | date('Y-m-d H:i') }}</td>
                                    <td>{{ documento.cuentaId }}</td>
                                    <td>{{ documento.cuentaNombre }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
{% block javascripts %}
    <script>
        const labels = {{ labels | json_encode |raw   }};
        const data = {{ data | json_encode |raw   }};
        const ctx = document.getElementById('myChart');
        new Chart(ctx, {
            type: 'line',
            data: {
                labels,
                datasets: [{
                    label: '# documentos',
                    data,
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                },
                plugins: {
                    title: {
                        display: true,
                        position: 'bottom',
                        text: (ctx) => 'Hora'
                    }
                },
                transitions: {
                    zoom: {
                        animation: {
                            duration: 100
                        }
                    }
                }
            }
        });
    </script>
{% endblock %}

